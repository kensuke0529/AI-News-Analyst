# AI News Analyst Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0

# Token Limits
DAILY_TOKEN_LIMIT=5000

# Database Configuration
VECTOR_DB_PATH=./data/vector_db  # Fallback for local development
USE_CHROMA_CLOUD=true  # Set to true for production (Railway)
CHROMA_API_KEY=your_chroma_api_key_here
CHROMA_TENANT=your_chroma_tenant_id_here
CHROMA_DATABASE=news-ai

# RAG Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=10
RETRIEVAL_K=3

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small

# Data Sources
TECHMEME_RSS_URL=https://www.techmeme.com/feed.xml
